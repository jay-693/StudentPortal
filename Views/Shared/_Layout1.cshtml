@{
    ViewData["Title"] = "College Name Student Portal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Landingstyle.css">
    <link rel="stylesheet" href="~/css/LoginStyle.css">
    <link rel="stylesheet" href="~/css/SignUpStyle.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="logo">
            <div class="college-logo">
                <img src="~/images/logo.png" alt="College Logo">
            </div>
            <span>College</span>
        </div>
        <nav>
            <ul>
                <li class="dropdown">
                    <a class="sep" href="#">Academics</a>
                    <ul class="dropdown-content">
                        <li><a href="#">Academic Calendar</a></li>
                        <li><a href="#">Class Time Table</a></li>
                        <li><a href="#">List Of Holidays</a></li>
                        <li><a href="#">Semwise Attendance</a></li>
                        <li><a href="#">Tuition Fee</a></li>
                        <li><a href="#">Hostel & Transportation Fee</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="sep" href="#">Examination Cell</a>
                    <ul class="dropdown-content">
                        <li><a href="#">Exam Time Table</a></li>
                        <li><a href="#">Internal Marks</a></li>
                        <li><a href="#">Semwise Grades</a></li>
                        <li><a href="#">Due Subjects</a></li>
                        <li><a href="#">Examination Fee</a></li>
                        <li><a href="#">Hall Ticket Downloading</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="sep" href="#">Courses</a>
                    <ul class="dropdown-content">
                        <li><a href="#">BTech Syllabus</a></li>
                        <li><a href="#">MBA Syllabus</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="sep" href="#">Library</a>
                    <ul class="dropdown-content">
                        <li><a href="#">Borrowed Books</a></li>
                        <li><a href="#">Books Status</a></li>
                        <li><a href="#">Library Payments</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div class="profile" style="display:flex;align-items:center; align-content:center; justify-content:center;justify-items:center">
            <img src="~/images/profile.jpeg" style="width:32px;height:32px" alt="College Logo">
            <a style="text-decoration:none" asp-controller="#" asp-action="#"><button class="user" style="margin-left:10px">@RenderSection("user",false)</button></a>
        </div>

    </header>

    <!-- Main Content -->
    <main>
        <section class="welcome-section">
            <div class="welcome-content">
                <div class="text-logo">
                    <h1>&nbsp Welcome to <br> College Name <br> Student Portal</h1>
                    <div class="college-logo-large">
                        <img src="~/images/logo.png" alt="College Logo">
                    </div>
                </div>
                <div class="portal-image">
                    <img src="~/images/Plan.png" alt="Students Illustration">
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer>
        <div class="footer-columns">
            <div class="footer-column">
                <h3>About College</h3>
                <ul>
                    <li><a href="#">Future and current students</a></li>
                    <li><a href="#">Academic programs</a></li>
                    <li><a href="#">Research</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Library</h3>
                <ul>
                    <li><a href="#">Recreation</a></li>
                    <li><a href="#">Varsity Sports</a></li>
                    <li><a href="#">Alumni & Friends</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Resources</h3>
                <ul>
                    <li><a href="#">Resources for Current Students</a></li>
                    <li><a href="#">Resources for Faculty & Staff</a></li>
                    <li><a href="#">Bookstore</a></li>
                    <li><a href="#">Campus Map</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h3>Contact</h3>
                <ul>
                    <li><a href="#">Careers@College</a></li>
                    <li><a href="#">Communications Office</a></li>
                    <li><a href="#">Give Now</a></li>
                    <li><a href="#">Disclaimer</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>© 2024 NoCode College. All rights reserved.</p>
            <div class="social-icons">
                <a href="#"><img src="~/images/Facebook.png" alt="Facebook"></a>
                <a href="#"><img src="/images/twitter.png" alt="Twitter"></a>
                <a href="#"><img src="/images/instagram.png" alt="Instagram"></a>
                <a href="#"><img src="/images/linkedin.png" alt="LinkedIn"></a>
            </div>
        </div>
    </footer>
</body>
</html>
